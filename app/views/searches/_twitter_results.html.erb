<!-- Twitter results starts to populate here -->
<% @twitter_results.results.map do |s|%>	
<li>			
	<div class="<%= cycle("tweetOne","tweetTwo","tweetThree") %>">
		<span style="padding:10px"><b><u> <%=s.from_user%>:</u></b></span>

		<%= link_to "http://twitter.com/#{s.from_user}" do %>
		<%= image_tag(s.profile_image_url, :size=>"50x50", :class=>"img-circle", :style=>"float:left") %>
		<% end %>
		<br \>
		&nbsp;&nbsp;
		<%="#{s.text}"%>
	</div>
</li>
<%end%>

<!-- End of twitter results -->






<!-- Once the page is loaded, initialize the plug-in. -->
<script type="text/javascript">
$(document).ready(new function() {
	// Prepare layout options.
	var options = {
		autoResize: true, // This will auto-update the layout when the browser window is resized.
		container: $('#main'), // Optional, used for some extra CSS styling
		offset: 5, // Optional, the distance between grid items
		itemWidth: 260 // Optional, the width of a grid item
	};

	// Get a reference to your grid items.
	var handler = $('#tiles li');

	// Call the layout function.
	handler.wookmark(options);

	// Update the layout.
	handler.wookmark();
	

	
	
	 function loadMore()
	{
	   $("div.load").show();
	    
		{
	        $.ajax({
	        url: "<%searches_path%>",
			method: "post",
			data: {
				// twitter_last_id: $("#tiles").data("twitter-las-id")
				tag : "<%=params[:search]%>",
				twitter_last_id :  "<%= @twitter_results.results.last.id %>"
			},
	        success: function(html)
	        {
	            if(html)
	            {	               
							$("div.load").hide();
	            }else
	            {
	                // $('div#loadmoreajaxloader').html('<center>No more posts to show.</center>');
	            }
	        }
	        });
	    }
	
	
	 }

	 function bindScroll(){
	   if($(window).scrollTop() + $(window).height() > $(document).height() - 300) {
	       $(window).unbind('scroll');
	       loadMore();
	   }
	}

	$(window).scroll(bindScroll);
	
	
	
	
});
</script>